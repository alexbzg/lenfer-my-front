{"login": {
    "type": "object",
    "properties": {
        "login": {
            "type": "string",
            "minLength": 5,
            "maxLength": 16
        },
        "password": {
            "type": "string",
            "minLength": 5,
            "maxLength": 32
        }
    }, 
    "required": ["login", "password"]
},
"passwordRecoveryRequest": {
    "type": "object",
    "properties": {
        "login": {
            "type": "string",
            "minLength": 5,
            "maxLength": 16
        }
    }, 
    "required": ["login"]
},
"device_updates": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "device_id": {
            "type":"integer"
        }
    },
    "required": ["token", "device_id"]
},

"post_sensors_data": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "device_id": {
            "type":"integer"
        },
        "data": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sensor_id": {
                        "type": "integer"
                    },
                    "tstamp": {
                        "type": "string",
                        "minLength" : 1
                    },
                    "value": {
                        "type": ["number", "null"]
                    }
                },
                "required": ["sensor_id", "tstamp", "value"]
            },
            "minItems": 1
        }
    },
    "required": ["token", "data", "device_id"]
},

"post_devices_log": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "device_id": {
            "type":"integer"
        },
        "entries": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "log_tstamp": {                    
                        "type": "string",
                        "minLength" : 1
                    },
                    "txt": {
                        "type": "string",
                        "minLength" : 1
                    }
                },
                "required": ["log_tstamp", "txt"]
            },
            "minItems": 1
        }
    },
    "required": ["token", "entries", "device_id"]
},

"register_device": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "device_hash": {
            "type": "string",
            "minLength": 6
        },
        "login": {
            "type": "string",
            "minLength": 1
        }
    },
    "required": ["token", "device_hash", "login"]
},
"post_device_props": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": "string"
        },
        "login": {
            "type": "string",
            "minLength": 1
        },
        "props": {
            "type": "array"
        }
    },
    "required": ["token", "login"]
},
"post_device_schedule": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": "string"
        },
        "device_type_id": {
            "type": "integer"
        },
        "login": {
            "type": "string",
            "minLength": 1
        },
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "day_no": {
                        "type": "integer"
                    }
                },
                "required": ["day_no"]
            }
        }
    },
    "required": ["token", "login", "device_type_id"]
},

"post_sensor_props": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": ["string", "null"]
        },
        "enabled": {
            "type": "boolean"
        },
        "login": {
            "type": "string",
            "minLength": 1
        },
        "is_master": {
            "type": "boolean"
        }
    },
    "required": ["token", "login", "is_master", "enabled"]
},

"post_user_settings": {
    "type": "object",
    "properties": {
        "token": {
            "type": "string",
            "minLength": 1
        },
        "password": {
            "type": "string",
            "minLength": 8
        },
        "login": {
            "type": "string",
            "minLength": 1
        },
        "email": {
            "type": "string",
            "format": "email"
        }
    },
    "required": ["token", "password", "login", "email"]
}




}

